<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" styleClass="transparent" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.UserEditController">
	<children>
      <BorderPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-radius: 1em;" styleClass="white-pane" stylesheets="@style.css">
         <center>
            <VBox prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="500.0">
                     <children>
                        <Label prefHeight="35.0" prefWidth="249.0" text="User Information" textFill="#282828">
                           <font>
                              <Font name="Calibri" size="30.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="300.0" prefWidth="500.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="500.0" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Name">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtname" prefHeight="44.0" prefWidth="262.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Email">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtemail" prefHeight="44.0" prefWidth="262.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Password">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtpass" prefHeight="44.0" prefWidth="262.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Address">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtaddress" prefHeight="44.0" prefWidth="262.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Point(s)">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtpoints" prefHeight="44.0" prefWidth="262.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </HBox>
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets left="50.0" right="50.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
                     <children>
                        <Button fx:id="doneBttn" mnemonicParsing="false" onAction="#handleDone" prefHeight="40.0" prefWidth="355.0" styleClass="pay-button" stylesheets="@style.css" text="Done" textFill="WHITE">
                           <font>
                              <Font name="Calibri" size="22.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
	</children>
</AnchorPane>
