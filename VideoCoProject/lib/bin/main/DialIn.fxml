<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DialInController">
	<children>
      <BorderPane prefHeight="700.0" prefWidth="500.0" style="-fx-background-radius: 1em;" styleClass="white-pane" stylesheets="@style.css">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="500.0">
                     <children>
                        <Label prefHeight="35.0" prefWidth="229.0" text="Dial In Operator" textFill="#282828">
                           <font>
                              <Font name="Calibri" size="30.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </HBox>
                  <HBox prefHeight="50.0" prefWidth="500.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" spacing="10.0">
                           <children>
                              <HBox alignment="CENTER" prefHeight="50.0" prefWidth="400.0" spacing="10.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="77.0" text="UserID">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtuserid" editable="false" prefHeight="44.0" prefWidth="289.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextField>
                                    <Button fx:id="lookupBttn" mnemonicParsing="false" onAction="#handleLookup" styleClass="pay-button" stylesheets="@style.css" text="Lookup" textFill="WHITE">
                                       <font>
                                          <Font name="Calibri" size="14.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="425.0" prefWidth="500.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="259.0" prefWidth="500.0" spacing="10.0">
                           <children>
                              <HBox alignment="TOP_CENTER" prefHeight="409.0" prefWidth="460.0">
                                 <children>
                                    <Label prefHeight="22.0" prefWidth="91.0" text="Orders">
                                       <font>
                                          <Font name="Calibri" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextArea fx:id="txtorders" editable="false" prefHeight="409.0" prefWidth="361.0">
                                       <font>
                                          <Font name="Calibri Light" size="14.0" />
                                       </font>
                                    </TextArea>
                                 </children>
                              </HBox>
                           </children>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <padding>
                              <Insets left="20.0" right="20.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
      </BorderPane>
	</children>
</AnchorPane>
